{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": [
			"es6"
		],
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,
		"typeRoots": [
			"./node_modules/@types",
			"./src/@types"
		],
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"paths": {
			"@controllers/*": [
				"./controllers/*"
			],
			"@providers/*": [
				"./providers/*"
			],
			"@repositories/*": [				
				"./modules/**/repositories/**/*.ts"
			],
			"@Irepositories/*": [
				"./modules/**/repositories/*.ts"			
			],
			"@models/*": [
				"./models/*"
			],
			"@entities/*": [
				"./modules/**/entities/*.ts"
			],
			"@config/*": [
				"./config/*"
			],
			"@utils/*": [
				"./utils/*"
			],
			"@modules/*": [
				"./modules/*"
			],
			"@services/*": [
				"./services/*"
			]
		}
	},
	"include": [
		"src",
		"src/__tests__"
	]
}