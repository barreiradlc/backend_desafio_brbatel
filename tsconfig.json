{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"lib": [
			"es6"
		],
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,
		"typeRoots": [
			"./node_modules/@types",
			"./src/@types"
		],
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"paths": {
			"@entities/*": [
				"./modules/**/entities/*.ts"
			],
			"@modules/*": [
				"./modules/*"
			],
			"@config/*": [
				"./config/*"
			]
		}
	},
	"include": [
		"src",
		"src/__tests__"
	]
}